<div class= "container">
<h1><%= @stylist.name %></h1>

<a href="/">Home</a>

  <h3>Clients:</h3>

  <ul>
    <% @stylist.client.each do |client| %>
      <li>
        <%= client.name() %>
       <a href="/clients/<%= client.id %>/edit"><button>Edit</button></a>
       <form class="form-inline" form action="/clients/<%= client.id %>/delete" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="btn btn-danger">Delete</button>
       </form>
      </li>
    <% end %>
  </ul>


  <form action='/clients' method='post'>
    <div class="form-group">
      <input type="hidden" name="stylist_id" id="stylist_id" value="<%=@stylist.id%>">
      <label>Type their name here, babe:</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Name">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
