<div class="container">
<h1>Here's all those adorable stylists!</h1>

<ul>
  <% @stylists.each do |stylist| %>
    <li>
      <a href="/stylists/<%= stylist.id %>"><%= stylist.name %></a>
      <a href="/stylists/<%= stylist.id %>/edit"><button>Edit</button></a>
      <form action="/stylists/<%= stylist.id %>/delete" method="post">
        <div class="form-group">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="btn btn-default btn-xs">Remove</button>
        </div>
      </form>
    </li>
  <% end %>
</ul>

<a href="/">Home</a>
</div>
